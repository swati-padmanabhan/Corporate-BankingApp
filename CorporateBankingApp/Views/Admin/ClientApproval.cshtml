@model IEnumerable<CorporateBankingApp.DTOs.ClientDTO>

@{
    ViewBag.Title = "Client Approval";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="table-responsive">
        <h2 class="my-3 fs-2">Client Approval</h2>

        <table id="data-table"
               class="table table-bordered table-centered mb-0 align-middle">
            <thead class="table-light">
                <tr>
                    <th>Username</th>
                    <th>Email</th>
                    <th>Company Name</th>
                    <th rowspan="2" class="align-middle text-center">Actions</th>
                </tr>
                <tr id="search-row">
                    <th>
                        <input type="text"
                               class="form-control search-input"
                               placeholder="Search Username"
                               onkeyup="filterTable(0)" />
                    </th>
                    <th>
                        <input type="text"
                               class="form-control search-input"
                               placeholder="Search Email"
                               onkeyup="filterTable(1)" />
                    </th>
                    <th>
                        <input type="text"
                               class="form-control search-input"
                               placeholder="Search Company Name"
                               onkeyup="filterTable(2)" />
                    </th>
                </tr>
            </thead>
            <tbody class="text-center">
                @foreach (var client in Model)
                {

                    <tr>
                        <td>
                            <p class="my-auto">@client.UserName</p>
                        </td>
                        <td>@client.Email</td>
                        <td>@client.CompanyName</td>
                        <td>
                            @Html.ActionLink("View Client", "ViewClientDetails", new
                            {
                                id =
                            client.Id
                            }, new { @class = "btn btn-sm btn-primary" })
                        </td>
                    </tr>

                }
            </tbody>
        </table>
    </div>
</div>

<script src="~/Scripts/clientOnboarding.js"></script>
<script>
    $(document).ready(() => {
        loadClientsForVerification();
    })
</script>