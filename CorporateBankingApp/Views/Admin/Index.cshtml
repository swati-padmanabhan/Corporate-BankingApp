@{
    ViewBag.Title = "Admin Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="my-5">
    <h2 class="display-5">Welcome, @ViewBag.Username</h2>
</div>

<div class="row my-4">
    <div class="col-md-4 mb-2">
        <div class="card">
            <div class="card-header bg-white h4">
                <i class="bi bi-check-circle"></i>
                <a href="@Url.Action("ClientApproval", "Admin")" class="float-right">
                    <i class="bi bi-arrow-right"></i>
                </a>
            </div>
            <div class="card-body">
                <h4 class="card-title">Client Approval</h4>
                <p class="card-text">Approve or reject clients after onboarding.</p>
            </div>
        </div>
    </div>

    <div class="col-md-4 mb-2">
        <div class="card">
            <div class="card-header bg-white h4">
                <i class="bi bi-person-gear"></i>
                <a href="@Url.Action("ClientManagement", "Admin")" class="float-right">
                    <i class="bi bi-arrow-right"></i>
                </a>
            </div>
            <div class="card-body">
                <h4 class="card-title">Client Management</h4>
                <p class="card-text">Manage all client-related activities here.</p>
            </div>
        </div>
    </div>

    <div class="col-md-4 mb-2">
        <div class="card">
            <div class="card-header bg-white h4">
                <i class="bi bi-bank"></i>
                <a href="@Url.Action("PaymentApprovals", "Admin")" class="float-right">
                    <i class="bi bi-arrow-right"></i>
                </a>
            </div>
            <div class="card-body">
                <h4 class="card-title">Payment Approvals</h4>
                <p class="card-text">Approve and monitor payments here.</p>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-4 mb-2">
        <div class="card">
            <div class="card-header bg-white h4">
                <i class="bi bi-people"></i>
                <a href="@Url.Action("BeneficiaryManagement", "Admin")" class="float-right">
                    <i class="bi bi-arrow-right"></i>
                </a>
            </div>
            <div class="card-body">
                <h4 class="card-title">Beneficiary Management</h4>
                <p class="card-text">Manage beneficiaries linked to clients.</p>
            </div>
        </div>
    </div>

    <div class="col-md-4 mb-2">
        <div class="card">
            <div class="card-header bg-white h4">
                <i class="bi bi-piggy-bank"></i>
                <a href="@Url.Action("SalaryDisbursementApprovals", "Admin")" class="float-right">
                    <i class="bi bi-arrow-right"></i>
                </a>
            </div>
            <div class="card-body">
                <h4 class="card-title">Salary Disbursement Approvals</h4>
                <p class="card-text">Approve salary disbursements for employees.</p>
            </div>
        </div>
    </div>

    <div class="col-md-4 mb-2">
        <div class="card">
            <div class="card-header bg-white h4">
                <i class="bi bi-file-earmark-text"></i>
                <a href="@Url.Action("ClientList", "Report")" class="float-right">
                    <i class="bi bi-arrow-right"></i>
                </a>
            </div>
            <div class="card-body">
                <h4 class="card-title">Report Generation</h4>
                <p class="card-text">Generate financial and transaction reports.</p>
            </div>
        </div>
    </div>
</div>
