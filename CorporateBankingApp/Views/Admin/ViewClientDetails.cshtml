
@{
    ViewBag.Title = "ViewClientDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Client Details: @Model.UserName</h2>
<p>Email: @Model.Email</p>
<p>Company: @Model.CompanyName</p>
<p>Location: @Model.Location</p>
<p>Contact Info: @Model.ContactInformation</p>

<form method="post" action="@Url.Action("ApproveClient", "Admin", new { id = Model.Id })">
    <button type="submit" class="btn btn-success">Approve</button>
</form>
<form method="post" action="@Url.Action("RejectClient", "Admin", new { id = Model.Id })">
    <button type="submit" class="btn btn-danger">Reject</button>
</form>

