
@{
    ViewBag.Title = "Client Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="my-5">
    <h2 class="display-5">Welcome, @ViewBag.Username</h2>
</div>

<div class="row my-4">
    <div class="col-md-4 mb-2">
        <div class="card">
            <div class="card-header bg-white h4">
                <i class="bi bi-people"></i>
                <a href="@Url.Action("ManageBeneficiaries", "Client")" class="float-right">
                    <i class="bi bi-arrow-right"></i>
                </a>
            </div>

            <div class="card-body">
                <h4 class="card-title">Manage Beneficiaries</h4>
                <p class="card-text">Add, update, or remove beneficiaries for payment processing.</p>
            </div>
        </div>
    </div>

    <div class="col-md-4 mb-2">
        <div class="card">
            <div class="card-header bg-white h4">
                <i class="bi bi-briefcase"></i>
                <a href="@Url.Action("ManageEmployees", "Client")" class="float-right">
                    <i class="bi bi-arrow-right"></i>
                </a>
            </div>

            <div class="card-body">
                <h4 class="card-title">Manage Employees</h4>
                <p class="card-text">Manage employee records and salary disbursements.</p>
            </div>
        </div>
    </div>

    <div class="col-md-4 mb-2">
        <div class="card">
            <div class="card-header bg-white h4">
                <i class="bi bi-cash"></i>
                <a href="@Url.Action("MakePaymentRequests", "Client")" class="float-right">
                    <i class="bi bi-arrow-right"></i>
                </a>
            </div>

            <div class="card-body">
                <h4 class="card-title">Make Payment Requests</h4>
                <p class="card-text">Submit payment requests for approval.</p>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-4 mb-2">
        <div class="card">
            <div class="card-header bg-white h4">
                <i class="bi bi-piggy-bank"></i>
                <a href="@Url.Action("SalaryDisbursement", "Client")" class="float-right">
                    <i class="bi bi-arrow-right"></i>
                </a>
            </div>

            <div class="card-body">
                <h4 class="card-title">Salary Disbursement</h4>
                <p class="card-text">Disburse salaries to your employees in batch or individually.</p>
            </div>
        </div>
    </div>

    <div class="col-md-4 mb-2">
        <div class="card">
            <div class="card-header bg-white h4">
                <i class="bi bi-file-earmark-arrow-up"></i>
                <a href="@Url.Action("UploadDocuments", "Client")" class="float-right">
                    <i class="bi bi-arrow-right"></i>
                </a>
            </div>

            <div class="card-body">
                <h4 class="card-title">Upload Documents</h4>
                <p class="card-text">Upload important documents for verification and transactions.</p>
            </div>
        </div>
    </div>

    <div class="col-md-4 mb-2">
        <div class="card">
            <div class="card-header bg-white h4">
                <i class="bi bi-bar-chart-line"></i>
                <a href="@Url.Action("GenerateReports", "Client")" class="float-right">
                    <i class="bi bi-arrow-right"></i>
                </a>
            </div>

            <div class="card-body">
                <h4 class="card-title">Generate Reports</h4>
                <p class="card-text">Generate transaction, payment, and salary disbursement reports.</p>
            </div>
        </div>
    </div>
</div>

