@{
    ViewBag.Title = "Registration Update Success";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Use your layout file
}

<div class="container my-5">
    <div class="position-relative jumbotron p-5 text-center text-muted border border-dashed rounded-5">
        <i class="bi bi-check2-circle display-1 text-success"></i>
        <h1 class="text-body-emphasis my-4">
            📄 Registration Update Successful!
        </h1>
        <p class="col-lg-8 mx-auto mb-4">
            Your registration details have been successfully updated.
            Our admin team will review your documents, and you will receive an email with updates regarding your account status shortly.
        </p>

        <p class="col-lg-8 mx-auto mb-4">
            Thank you for your cooperation! If you have any questions, feel free to reach out to our support team.
        </p>

        <a href="@Url.Action("Index", "Home")" class="btn btn-primary mb-5" type="button">
            <i class="bi bi-house-door mx-2"></i>
            Back to Home
        </a>
    </div>
</div>
