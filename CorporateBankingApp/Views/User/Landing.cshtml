@{
    Layout = null; // Specify your layout if needed
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Crimson+Text:ital,wght@0,400;0,600;0,700;1,400;1,600;1,700&family=Raleway:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />
    <link rel="stylesheet" href="~/styles.css" type="text/css" />
    <link href="~/landing.css" rel="stylesheet" type="text/css" />
</head>
<body class="bg-white">
    <header class="header">
        <div class="navbar-area">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-lg-12">
                        <nav class="navbar navbar-expand-lg">
                            <a class="navbar-brand primary-text" href="@Url.Action("Index", "Home")">SetuPay</a>
                            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                                <i class="bi bi-list fs-1"></i>
                            </button>

                            <div class="collapse navbar-collapse sub-menu-bar" id="navbarSupportedContent">
                                <ul id="nav" class="navbar-nav ms-auto">
                                    <li class="nav-item">
                                        <a class="page-scroll active" href="#">Home</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="page-scroll" href="#service">Services</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="page-scroll" href="#why-us">Why us</a>
                                    </li>
                                </ul>
                                <div class="d-lg-flex col-lg-3 justify-content-lg-end">
                                    <a href="@Url.Action("Index", "Home")" class="main-btn primary-light-bg btn-hover neutral-light-text px-4 py-2">Log in</a>
                                </div>
                            </div>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <section id="home" class="hero-section">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6">
                    <div class="hero-content">
                        <span class="wow fadeInLeft primary-dark-text" data-wow-delay=".2s">Welcome To SetuPay</span>
                        <p class="wow fadeInUp primary-text display-5" data-wow-delay=".4s">Your go-to solution for managing corporate finance.</p>
                        <p class="wow fadeInUp" data-wow-delay=".6s">Simplify your financial operations with tailored solutions, expert support, and robust security, all designed to help your business thrive.</p>
                        <a href="javascript:void(0)" class="main-btn btn-hover primary-bg wow fadeInUp" data-wow-delay=".6s">Get started</a>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="hero-img wow fadeInUp" data-wow-delay=".5s">
                        <img src="~/images/landing-hero.jpg" alt="" style="width: 100%; height: 100%" />
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section id="service" class="service-section img-bg pt-100 pb-100">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-xxl-5 col-xl-6 col-lg-7 col-md-10">
                    <div class="section-title text-center mb-50">
                        <h1 class="mb-3 display-4">Our Services</h1>
                        <p>Discover a comprehensive range of corporate banking solutions tailored to meet your business needs.</p>
                    </div>
                </div>
            </div>

            <div class="row">
                <!-- Client Onboarding Service -->
                <div class="col-xl-3 col-md-6">
                    <div class="single-service">
                        <div class="icon color-1">
                            <i class="bi bi-people-fill"></i>
                        </div>
                        <div class="content">
                            <h3>Client Onboarding</h3>
                            <p>Seamlessly onboard corporate clients with document verification and approval workflows.</p>
                        </div>
                    </div>
                </div>

                <!-- Payment Processing Service -->
                <div class="col-xl-3 col-md-6">
                    <div class="single-service">
                        <div class="icon color-2">
                            <i class="bi bi-cash-coin"></i>
                        </div>
                        <div class="content">
                            <h3>Payment Processing</h3>
                            <p>Efficiently manage payments to inbound and outbound beneficiaries with approval processes.</p>
                        </div>
                    </div>
                </div>

                <!-- Salary Disbursement Service -->
                <div class="col-xl-3 col-md-6">
                    <div class="single-service">
                        <div class="icon color-3">
                            <i class="bi bi-piggy-bank"></i>
                        </div>
                        <div class="content">
                            <h3>Salary Disbursement</h3>
                            <p>Automate salary payments to employees with options for batch disbursement and detailed reporting.</p>
                        </div>
                    </div>
                </div>

                <!-- Report Generation Service -->
                <div class="col-xl-3 col-md-6">
                    <div class="single-service">
                        <div class="icon color-4">
                            <i class="bi bi-bar-chart-line"></i>
                        </div>
                        <div class="content">
                            <h3>Report Generation</h3>
                            <p>Generate comprehensive reports on transactions, payments, and salary disbursements for audit and analysis.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section id="why-us" class="why-choose-us-section pt-100 pb-100">
        <div class="container">
            <div class="row justify-content-center mb-5">
                <div class="col-xxl-5 col-xl-6 col-lg-7 col-md-10">
                    <div class="section-title text-center mb-50">
                        <h1 class="mb-3 display-4">Why Choose Us</h1>
                        <p>Experience the efficiency and security of our cutting-edge corporate banking solutions.</p>
                    </div>
                </div>
            </div>

            <div class="row">
                <!-- High Security -->
                <div class="col-xl-3 col-md-6">
                    <div class="single-feature">
                        <div class="content">
                            <h3 class="mb-3">
                                <i class="bi bi-lock me-2"></i>High Security
                            </h3>
                            <p>State-of-the-art encryption and secure communication ensure your transactions are always safe.</p>
                        </div>
                    </div>
                </div>

                <!-- Reliability -->
                <div class="col-xl-3 col-md-6">
                    <div class="single-feature">
                        <div class="content">
                            <h3 class="mb-3">
                                <i class="bi bi-shield-check me-2"></i>Reliability
                            </h3>
                            <p>Enjoy 99.9% uptime and seamless operations, ensuring your business never stops.</p>
                        </div>
                    </div>
                </div>

                <!-- Scalability -->
                <div class="col-xl-3 col-md-6">
                    <div class="single-feature">
                        <div class="content">
                            <h3 class="mb-3">
                                <i class="bi bi-bounding-box me-2"></i>Scalability
                            </h3>
                            <p>Designed to grow with your business, handling increasing volumes effortlessly.</p>
                        </div>
                    </div>
                </div>

                <!-- User-Friendly Interface -->
                <div class="col-xl-3 col-md-6">
                    <div class="single-feature">
                        <div class="content">
                            <h3 class="mb-3">
                                <i class="bi bi-house-heart me-2"></i>User-Friendly Interface
                            </h3>
                            <p>Navigate easily through our intuitive interface, making your banking experience seamless.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <footer class="footer pt-100 pb-100">
        <div class="container">
            <div class="row justify-content-between">
                <div class="col-lg-4 col-md-6">
                    <div class="footer-logo">
                        <a href="@Url.Action("Index", "Home")">SetuPay</a>
                    </div>
                    <p class="mt-4">Your trusted partner for corporate finance solutions.</p>
                </div>
                <div class="col-lg-4 col-md-6">
                    <h5>Contact Us</h5>
                    <ul>
                        <li><a href="mailto:info@setupay.com">info@setupay.com</a></li>
                        <li><a href="tel:+123456789">+123 456 789</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-MxgqlsjgTqyDoLwGfXTo4ZWcRa12wS6F2y2IR6aXfA1oYzZ4/t4ViME1n4QxGb7N" crossorigin="anonymous"></script>
</body>
</html>
